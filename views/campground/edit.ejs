<%- include("../partials/header.ejs") %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campgrounds.name %></h1>
        <div class="formStyle" style="width:50%; margin:0 auto;">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= campgrounds.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= campgrounds.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= campgrounds.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campgrounds._id %>">Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer.ejs") %> 