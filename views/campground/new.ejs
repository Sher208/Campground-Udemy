<%- include("../partials/header.ejs") %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new CampGround</h1>
        <div class="formStyle" style="width:50%; margin:0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campName" placeholder="Enter camp name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campImage" placeholder="Link an image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campDescription" placeholder="Type Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>


